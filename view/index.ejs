    }

    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: "Georgia", serif;
      background-size: cover;
      background-image: url("https://t3.ftcdn.net/jpg/10/29/97/12/360_F_1029971297_pyEjXeWSTUDuQMI3O2kl4okYSbiWqcA5.jpg");
      background-position: center;
      background-repeat: no-repeat;

      padding: 20px;
    }

    .card {
      background-color: cornsilk;
      max-width: 520px;
      width: 70%;
      padding: 50px 40px;
      border-radius: 24px;
      text-align: center;
      background-image: url('../public/background.jpeg');
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
      animation: fadeIn 1.5s ease;
      backdrop-filter: blur(6px);
    }

    h1 {
      font-size: 2.8em;
      color: #c9184a;
      margin-bottom: 20px;
      letter-spacing: 1px;
    }

    p {
      font-size: 1.2em;
      line-height: 1.9;
      color: #6a1a2f;
      margin-bottom: 20px;
    }

    .hearts {
      font-size: 2.3em;
      margin: 25px 0;
      animation: pulse 1.6s infinite;
    }

    .closing {
      font-weight: bold;
      font-size: 1.1em;
      margin-top: 25px;
      color: #a4133c;
    }

    .signature {
      margin-top: 30px;
      font-style: italic;
      font-size: 1.1em;
      color: #800f2f;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.15); }
      100% { transform: scale(1); }
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 2.2em;
      }

      p {
        font-size: 1.05em;
      }

      .card {
        padding: 35px 25px;
      }
    }
  </style>
</head>

