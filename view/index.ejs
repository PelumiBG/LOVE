  <style>
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-family: 'Arial', sans-serif;
      background: radial-gradient(circle at top left, rgba(255,0,0,0.2) 0%, transparent 50%), radial-gradient(circle at bottom right, rgba(255,20,147,0.2) 0%, transparent 50%), linear-gradient(135deg, rgba(255,154,158,0.6) 0%, rgba(254,207,239,0.6) 50%, rgba(254,207,239,0.6) 100%), url('https://images.unsplash.com/photo-1518199266791-5375a83190b7?w=1920&h=1080&fit=crop&crop=center');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      padding: 20px;
      overflow: auto;
    }

    .card {
      background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 50%, #fd79a8 100%);
      max-width: 500px;
      width: 100%;
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      position: relative;
      z-index: 1;
      border: 3px solid #e84393;
    }

    h1 {
      font-size: 2.5em;
      color: #e91e63;
      margin-bottom: 20px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    p {
      font-size: 1.1em;
      line-height: 1.6;
      color: #333;
      margin-bottom: 20px;
    }

    .hearts {
      font-size: 2em;
      margin: 20px 0;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    .closing {
      font-weight: bold;
      font-size: 1.2em;
      margin-top: 20px;
      color: #c2185b;
    }

    .signature {
      margin-top: 30px;
      font-style: italic;
      font-size: 1.2em;
      color: #880e4f;
    }

    .surprise-button {
      margin-top: 20px;
      padding: 12px 24px;
      background-color: #e91e63;
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      font-size: 1em;
      transition: background-color 0.3s ease;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .surprise-button:hover {
      background-color: #c2185b;
    }

    .surprise-message {
      display: none;
      margin-top: 20px;
      font-size: 1.1em;
      color: #333;
      font-style: italic;
      animation: fadeIn 1s ease-in;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .floating-hearts {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
      z-index: 0;
    }

    .heart {
      position: absolute;
      font-size: 2em;
      animation: float 8s linear infinite;
      opacity: 0.8;
    }

    .heart:nth-child(1) { left: 10%; animation-delay: 0s; }
    .heart:nth-child(2) { left: 20%; animation-delay: 1s; }
    .heart:nth-child(3) { left: 30%; animation-delay: 2s; }
    .heart:nth-child(4) { left: 40%; animation-delay: 3s; }
    .heart:nth-child(5) { left: 50%; animation-delay: 4s; }
    .heart:nth-child(6) { left: 60%; animation-delay: 5s; }
    .heart:nth-child(7) { left: 70%; animation-delay: 6s; }
    .heart:nth-child(8) { left: 80%; animation-delay: 7s; }
    .heart:nth-child(9) { left: 90%; animation-delay: 8s; }
    .heart:nth-child(10) { left: 100%; animation-delay: 9s; }

    @keyframes float {
      0% { transform: translateY(100vh) rotate(0deg); }
      100% { transform: translateY(-100px) rotate(360deg); }
    }

    @media (max-width: 600px) {
      .card {
        padding: 30px 20px;
      }

      h1 {
        font-size: 2em;
        animation: pulse 2s infinite;
      }

      p {
        font-size: 1em;
      }

      .heart {
        font-size: 1.5em;
      }
    }
  </style>
</head>

